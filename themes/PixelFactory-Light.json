{
  "$schema": "vscode://schemas/color-theme",
  "name": "PixelFactory Light",
  "// ": "LIGHT THEME VARIANT - Adapted color palette for light backgrounds",
  "colors": {
    "foreground": "#3a3a3a",
    "disabledForeground": "#a0a0a0",
    "focusBorder": "#8B7D6B",

    "editor.background": "#F5F5F5",
    "editor.foreground": "#3a3a3a",
    "editor.lineHighlightBackground": "#EFEFEF",
    "editor.lineHighlightBorder": "#E5E5E5",

    "editor.selectionBackground": "#D9E0E9",
    "editor.selectionHighlightBackground": "#E8E8E8",
    "editor.wordHighlightBackground": "#8A9E7833",
    "editor.wordHighlightBorder": "#8A9E7855",
    "editor.wordHighlightStrongBackground": "#CF7F8F44",
    "editor.wordHighlightStrongBorder": "#CF7F8F66",

    "editor.findMatchBackground": "#FFC62F66",
    "editor.findMatchHighlightBackground": "#FFC62F33",
    "editor.findRangeHighlightBackground": "#E8E8E844",
    "editor.findMatchBorder": "#FFC62F",

    "editorBracketMatch.background": "#D4C4AD33",
    "editorBracketMatch.border": "#8B7D6B",
    "editorBracketHighlight.foreground1": "#3a3a3a",
    "editorBracketHighlight.foreground2": "#8B7D6B",
    "editorBracketHighlight.foreground3": "#6FA030",
    "editorBracketHighlight.foreground4": "#D97A45",
    "editorBracketHighlight.foreground5": "#C94A2A",
    "editorBracketHighlight.foreground6": "#A08530",
    "editorBracketHighlight.unexpectedBracket.foreground": "#A71400",

    "editorLineNumber.foreground": "#b0b0b0",
    "editorLineNumber.activeForeground": "#8B7D6B",
    "editorWhitespace.foreground": "#E0E0E0",

    "editorInlayHint.background": "#E8E8E8",
    "editorInlayHint.foreground": "#8B7D6B",
    "editorInlayHint.typeForeground": "#3a3a3a",
    "editorInlayHint.parameterForeground": "#6FA030",

    "editorGutter.background": "#F5F5F5",
    "editorGutter.modifiedBackground": "#C3A045",
    "editorGutter.addedBackground": "#6FA030",
    "editorGutter.deletedBackground": "#C94A2A",

    "problemsErrorIcon.foreground": "#A71400",
    "problemsWarningIcon.foreground": "#FFC62F",
    "problemsInfoIcon.foreground": "#3a3a3a",
    "editorError.foreground": "#A71400",
    "editorError.border": "#A7140044",
    "editorWarning.foreground": "#D97A45",
    "editorWarning.border": "#D97A4544",
    "editorInfo.foreground": "#3a3a3a",
    "editorInfo.border": "#3a3a3a44",
    "editorHint.foreground": "#8B7D6B",
    "editorHint.border": "#8B7D6B44",

    "diffEditor.insertedTextBackground": "#6FA03022",
    "diffEditor.removedTextBackground": "#C94A2A22",
    "diffEditor.unchangedRegionBackground": "#F5F5F5",
    "diffEditor.unchangedRegionForeground": "#b0b0b0",
    "diffEditor.unchangedRegionShadow": "#F5F5F5cc",
    "diffEditor.diagonalFill": "#E8E8E8",

    "sideBar.background": "#F9F9F9",
    "sideBar.foreground": "#3a3a3a",
    "sideBar.border": "#E5E5E5",
    "sideBarTitle.foreground": "#3a3a3a",
    "sideBarSectionHeader.background": "#F0F0F0",
    "sideBarSectionHeader.foreground": "#3a3a3a",
    "sideBarSectionHeader.border": "#E8E8E8",

    "activityBar.background": "#FFFFFF",
    "activityBar.foreground": "#3a3a3a",
    "activityBar.activeBorder": "#FF8F2E",
    "activityBar.activeBackground": "#F5F5F5",
    "activityBar.inactiveForeground": "#b0b0b0",
    "activityBarBadge.background": "#FF8F2E",
    "activityBarBadge.foreground": "#FFFFFF",

    "statusBar.background": "#F9F9F9",
    "statusBar.foreground": "#3a3a3a",
    "statusBar.border": "#E5E5E5",
    "statusBar.debuggingBackground": "#A71400",
    "statusBar.debuggingForeground": "#FFFFFF",
    "statusBar.debuggingBorder": "#A71400",
    "statusBarItem.activeBackground": "#E8E8E8",
    "statusBarItem.hoverBackground": "#E8E8E8",
    "statusBarItem.prominentBackground": "#FF8F2E",
    "statusBarItem.prominentForeground": "#FFFFFF",
    "statusBarItem.prominentHoverBackground": "#E97A2C",

    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#3a3a3a",
    "tab.activeBorder": "#FF8F2E",
    "tab.inactiveBackground": "#F0F0F0",
    "tab.inactiveForeground": "#808080",
    "tab.hoverBackground": "#F5F5F5",
    "tab.border": "#E5E5E5",

    "input.background": "#FFFFFF",
    "input.foreground": "#3a3a3a",
    "input.border": "#D0D0D0",
    "input.focusBorder": "#FF8F2E",
    "input.placeholderForeground": "#b0b0b0",

    "button.background": "#FF8F2E",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#E97A2C",
    "button.secondaryBackground": "#E8E8E8",
    "button.secondaryForeground": "#3a3a3a",

    "list.activeSelectionBackground": "#E8E8E8",
    "list.activeSelectionForeground": "#FF8F2E",
    "list.inactiveSelectionBackground": "#F0F0F0",
    "list.inactiveSelectionForeground": "#3a3a3a",
    "list.hoverBackground": "#F5F5F5",

    "editorCursor.foreground": "#FF8F2E",
    "editorCursor.background": "#FFFFFF",

    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#3a3a3a",
    "terminal.ansiBlack": "#3a3a3a",
    "terminal.ansiRed": "#C94A2A",
    "terminal.ansiGreen": "#6FA030",
    "terminal.ansiYellow": "#C3A045",
    "terminal.ansiBlue": "#3a7FC0",
    "terminal.ansiMagenta": "#C55A8D",
    "terminal.ansiCyan": "#4A9F6A",
    "terminal.ansiWhite": "#b0b0b0",
    "terminal.ansiBrightBlack": "#808080",
    "terminal.ansiBrightRed": "#E07050",
    "terminal.ansiBrightGreen": "#8FD050",
    "terminal.ansiBrightYellow": "#D4A850",
    "terminal.ansiBrightBlue": "#4FA3FF",
    "terminal.ansiBrightMagenta": "#D57AA3",
    "terminal.ansiBrightCyan": "#6FBF8F",
    "terminal.ansiBrightWhite": "#E0E0E0"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": "comment",
      "settings": {
        "foreground": "#A0A0A0"
      }
    },
    {
      "name": "String",
      "scope": "string",
      "settings": {
        "foreground": "#6FA030"
      }
    },
    {
      "name": "Number",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#C55A8D"
      }
    },
    {
      "name": "Keyword",
      "scope": "keyword",
      "settings": {
        "foreground": "#D74B2A"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "foreground": "#D9A835"
      }
    },
    {
      "name": "Operator",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#FF8F2E"
      }
    },
    {
      "name": "Entity",
      "scope": "entity.name.function, entity.name.class",
      "settings": {
        "foreground": "#3a7FC0"
      }
    }
  ]
}
