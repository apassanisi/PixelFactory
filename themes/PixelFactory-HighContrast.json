{
  "$schema": "vscode://schemas/color-theme",
  "name": "PixelFactory High Contrast",
  "// ": "HIGH CONTRAST VARIANT - Enhanced visibility for accessibility",
  "include": "./PixelFactory.json",
  "colors": {
    "foreground": "#FFFFFF",
    "disabledForeground": "#808080",
    "focusBorder": "#FFFF00",

    "editor.background": "#000000",
    "editor.foreground": "#FFFFFF",
    "editor.lineHighlightBackground": "#1C1C1C",
    "editor.lineHighlightBorder": "#404040",

    "editor.selectionBackground": "#0050FF",
    "editor.selectionHighlightBackground": "#005ACC80",

    "editor.findMatchBackground": "#FFFF0066",
    "editor.findMatchBorder": "#FFFF00",

    "editorBracketMatch.background": "#40404066",
    "editorBracketMatch.border": "#FFFFFF",
    "editorBracketHighlight.foreground1": "#FFFFFF",
    "editorBracketHighlight.foreground2": "#FFFF00",
    "editorBracketHighlight.foreground3": "#00FF00",
    "editorBracketHighlight.foreground4": "#FF6600",
    "editorBracketHighlight.foreground5": "#FF0000",
    "editorBracketHighlight.foreground6": "#FFFF00",
    "editorBracketHighlight.unexpectedBracket.foreground": "#FF0000",

    "editorLineNumber.foreground": "#606060",
    "editorLineNumber.activeForeground": "#FFFFFF",

    "editorError.foreground": "#FF0000",
    "editorError.border": "#FF000088",
    "editorWarning.foreground": "#FFFF00",
    "editorWarning.border": "#FFFF0088",
    "editorInfo.foreground": "#00FFFF",

    "sideBar.background": "#1C1C1C",
    "sideBar.foreground": "#FFFFFF",
    "sideBar.border": "#FFFFFF",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.activeBorder": "#FFFF00",
    "activityBarBadge.background": "#FF6600",
    "activityBarBadge.foreground": "#FFFFFF",

    "statusBar.background": "#1C1C1C",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#FFFFFF",
    "statusBar.debuggingBackground": "#FF0000",

    "tab.activeBackground": "#404040",
    "tab.activeForeground": "#FFFFFF",
    "tab.activeBorder": "#FFFF00",
    "tab.inactiveBackground": "#1C1C1C",
    "tab.inactiveForeground": "#808080",
    "tab.border": "#FFFFFF",

    "input.background": "#1C1C1C",
    "input.foreground": "#FFFFFF",
    "input.border": "#FFFFFF",
    "input.focusBorder": "#FFFF00",

    "button.background": "#FF6600",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#FF8822",
    "button.secondaryBackground": "#404040",
    "button.secondaryForeground": "#FFFFFF",

    "list.activeSelectionBackground": "#0050FF",
    "list.activeSelectionForeground": "#FFFF00",
    "list.focusOutline": "#FFFFFF",

    "editorCursor.foreground": "#FFFF00",
    
    "terminal.ansiRed": "#FF0000",
    "terminal.ansiGreen": "#00FF00",
    "terminal.ansiYellow": "#FFFF00",
    "terminal.ansiBlue": "#0080FF",
    "terminal.ansiCyan": "#00FFFF",
    "terminal.ansiWhite": "#FFFFFF"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": "comment",
      "settings": {
        "foreground": "#808080"
      }
    },
    {
      "name": "String - High Contrast",
      "scope": "string",
      "settings": {
        "foreground": "#00FF00"
      }
    },
    {
      "name": "Number - High Contrast",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#FFFF00"
      }
    },
    {
      "name": "Keyword - High Contrast",
      "scope": "keyword",
      "settings": {
        "foreground": "#FF0000"
      }
    },
    {
      "name": "Storage - High Contrast",
      "scope": "storage",
      "settings": {
        "foreground": "#FFFF00"
      }
    },
    {
      "name": "Operator - High Contrast",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#FF6600"
      }
    },
    {
      "name": "Entity - High Contrast",
      "scope": "entity.name.function, entity.name.class",
      "settings": {
        "foreground": "#00FFFF"
      }
    },
    {
      "name": "Invalid - High Contrast",
      "scope": "invalid",
      "settings": {
        "background": "#FF0000",
        "foreground": "#FFFFFF"
      }
    }
  ]
}
